// File permissions (via left shift)

typedef unsigned short Permissions;  // 16 bits

OWNER_READ   0x100  (1 << 8) // 100000000
OWNER_WRITE  0x080  (1 << 7) // 010000000
OWNER_EXEC   0x040  // 001000000
GROUP_READ   0x020  // 000100000
GROUP_WRITE  0x010  // 000010000
GROUP_EXEC   0x008  // 000001000
PUBLIC_READ  0x004  // 000000100
PUBLIC_WRITE 0x002  // 000000010
PUBLIC_EXEC  0x001  // 000000001



1 = 0x01 = 01 = 0000000000000001


